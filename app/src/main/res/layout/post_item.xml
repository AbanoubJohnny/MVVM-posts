<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

	<data app:class="app.posts.johnny.abanoub.mvvm_posts.modules.posts.PostListAdapter">
		<variable name="viewModel"
		          type="app.posts.johnny.abanoub.mvvm_posts.modules.posts.PostViewModel"/>
	</data>

	<LinearLayout
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:paddingStart="16dp"
		 android:paddingEnd="16dp"
		 android:orientation="vertical">
		<TextView
			 android:id="@+id/post_title"
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 app:mutableText="@{viewModel.postTitle}"/>
		<TextView
			 android:id="@+id/post_body"
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 app:mutableText="@{viewModel.postBody}"/>
	</LinearLayout>
</layout>